<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileSettings">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/userphoto"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/round_bg"
            android:scaleX="2"
            android:scaleY="2"
            app:srcCompat="@drawable/icmob" />

        <TextView
            android:id="@+id/uname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/mr"
            android:padding="6dp"
            android:text="username"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/ulevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/mr"
            android:padding="2dp"
            android:text="level 1"
            android:textAlignment="center" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="350dp">


            <Button
                android:id="@+id/btnsave2"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bgwhite"
                android:elevation="7dp"
                android:fontFamily="@font/mm"
                android:text="Save Theme"
                android:textAllCaps="false"
                android:textColor="#E6DADA"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/logout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"/>

            <Button
                android:id="@+id/logout"
                android:layout_width="86dp"
                android:layout_height="34dp"
                android:background="@drawable/bgwhite"
                android:elevation="7dp"
                android:fontFamily="@font/mm"
                android:text="Log Out"
                android:textAllCaps="false"
                android:textColor="#FF008C"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/btnsave2" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</RelativeLayout>